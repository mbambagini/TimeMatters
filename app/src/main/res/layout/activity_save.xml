<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_activities"
    tools:context="org.timematters.activities.SaveActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_time_date"
            android:text="@string/text_elapsed_when"
            android:textAlignment="center"
            android:textSize="40dp"
            android:gravity="center" />
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_summary_day"
            android:textAlignment="center"
            android:textSize="40dp"
            android:gravity="center" />
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_time_title2"
            android:text="@string/text_for"
            android:textAlignment="center"
            android:textSize="40dp"
            android:gravity="center" />
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_summary_elapsed_time"
            android:textAlignment="center"
            android:textSize="40dp"
            android:gravity="center" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="40dp"
            android:text="@string/text_note"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal" />

        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLength="100"
            android:maxEms="100"
            android:id="@+id/txt_summary_note"
            android:layout_gravity="center_horizontal"
            android:hint="@string/hint_note" />
        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_save"
            android:id="@+id/btn_save"
            android:background="@android:color/holo_green_light"
            android:onClick="onClickUpperButtons" />
    </LinearLayout>
</FrameLayout>
